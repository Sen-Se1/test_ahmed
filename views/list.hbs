<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold text-center mb-6">{{title}}</h1>
  <div class="overflow-x-auto">
    <table class="table-auto w-full border-collapse border border-gray-300">
      <thead>
        <tr class="bg-gray-200">
          <th class="border border-gray-300 px-4 py-2">Photo</th>
          <th class="border border-gray-300 px-4 py-2">Name</th>
          <th class="border border-gray-300 px-4 py-2">Number</th>
          <th class="border border-gray-300 px-4 py-2">Role</th>
        </tr>
      </thead>
      <tbody>
        {{#each continu}}
        <tr class="hover:bg-gray-100">
          <td class="border border-gray-300 px-4 py-2">
            <img
              src="{{photo}}"
              alt="Photo of {{nom}}"
              class="w-16 h-16 object-cover rounded-lg"
            />
          </td>
          <td class="border border-gray-300 px-4 py-2">{{nom}}</td>
          <td class="border border-gray-300 px-4 py-2">{{numero}}</td>
          <td class="border border-gray-300 px-4 py-2">{{role}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
